<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:visibility="visible"
    tools:context=".HomeFragment"
    android:focusableInTouchMode="true">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_baseline_search_white_24"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName"
                    app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Top Tourism Spots"
                    android:textColor="#C9282828"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
                    app:layout_constraintVertical_bias="0.0" />

                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="320dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="SpeakableTextPresentCheck">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="800dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/H_TopTourismSpot1"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot5"
                                app:layout_constraintEnd_toStartOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 1"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/H_TopTourismSpot2"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot6"
                                app:layout_constraintEnd_toStartOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 2"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/H_TopTourismSpot3"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot7"
                                app:layout_constraintEnd_toStartOf="@+id/H_TopTourismSpot4"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 3"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/H_TopTourismSpot4"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpotText3"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintTop_toTopOf="@+id/H_TopTourismSpot3"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 4"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot4"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot4"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot4"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot4"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/H_TopTourismSpot5"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintHorizontal_chainStyle="spread_inside"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot1"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot1"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 5"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot5"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot5"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot5"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot5"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/H_TopTourismSpot6"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot2"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot2"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 6"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot6"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot6"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot6"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot6"
                                app:layout_constraintVertical_bias="0.0" />

                            <ImageView
                                android:id="@+id/H_TopTourismSpot7"
                                android:layout_width="170dp"
                                android:layout_height="125dp"
                                android:background="#742E2E2E"
                                android:scaleType="fitXY"
                                android:textAlignment="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot3"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot3"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:id="@+id/H_TopTourismSpotText7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tourism Spot 7"
                                android:textColor="#C9282828"
                                app:layout_constraintBottom_toTopOf="@+id/H_TopTourismSpot7"
                                app:layout_constraintEnd_toEndOf="@+id/H_TopTourismSpot7"
                                app:layout_constraintStart_toStartOf="@+id/H_TopTourismSpot7"
                                app:layout_constraintTop_toBottomOf="@+id/H_TopTourismSpot7"
                                app:layout_constraintVertical_bias="0.0" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <EditText

                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/white_box_curved_border"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="Find a tourist spot in your location"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView7"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#742E2E2E"
                    android:gravity="center"
                    android:text="Welcome Video"
                    android:textAlignment="center"
                    android:textSize="21sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>